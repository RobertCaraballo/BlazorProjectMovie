@page "/personas/crear"
@inject IRepositorio repositorio
@inject NavigationManager navigationManager
@inject IMostrarMensaje mostrarMensaje

<h3>CrearPersonas</h3>

<FormularioPersonas OnValidSubmit="CrearPersona" persona="persona">

</FormularioPersonas>

@code {
    private Personas persona = new Personas();

    public async void CrearPersona()
    {
        var httpResponse = await repositorio.Post("api/personas", persona);
        if (httpResponse.Error)
        {
             await mostrarMensaje.MostrarMensajeError(await httpResponse.GetBody());
            //var body = await httpResponse.HttpResponseMessage.Content.ReadAsByteArrayAsync();
            //Console.WriteLine(body);
        }
        else
        {
            navigationManager.NavigateTo("/personas");
        }
        Console.WriteLine("Se creo una persona");
    }
}
