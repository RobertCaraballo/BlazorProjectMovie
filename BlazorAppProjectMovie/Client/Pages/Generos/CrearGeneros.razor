@page "/generos/crear"

<h3>Crear Generos</h3>

<EditForm Model="genero" on = "Crear" >
    <DataAnnotationsValidator/>
    <div class = "col-form-label-lg">
        <label>Nombre:</label>
        <div>
            <InputText class = "form-control" @bind-Value = "@genero.Name"></InputText>
            <ValidationMessage For = "@(() => genero.Name)"/>
        </div>
    </div>

     
    <button class="btn btn-danger" type = "submit">Make Submit</button>
</EditForm>


@code {
    private Genero genero = new Genero();

    private void Crear()
    {
        Console.WriteLine("Ejecutnado el metodo");
        Console.WriteLine($"Se han agregado los datos correctamente; se agrego {genero.Name}");
    }

}
