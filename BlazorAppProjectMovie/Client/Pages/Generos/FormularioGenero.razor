<h3>FormularioGenero</h3>

<EditForm Model="genero" OnSubmit = "OnValidSubmit" >
    <DataAnnotationsValidator/>
    <div class = "col-form-label-lg">
        <label>Nombre:</label>
        <div>
            <InputText class = "form-control" @bind-Value = "@genero.Name"></InputText>
            <ValidationMessage For = "@(() => genero.Name)"/>
        </div>
    </div>

     
    <button class="btn btn-danger" type = "submit">Submit</button>
</EditForm>

@code {
    [Parameter] public Genero genero { get; set; }
    [Parameter] public EventCallback OnValidSubmit { set; get; }
}
