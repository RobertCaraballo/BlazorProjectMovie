@page "/counter"
@inject ServiciosSingleton singlenton
@inject ServiciosTransistorio Transistorio

<PageTitle>Counter</PageTitle>

<h1>Counter</h1>

<p role="status">Current count: @currentCount</p>

<p role="status">Current count: @singlenton.valor</p>

<p role="status">Current count: @Transistorio.valor</p>





<button class="btn btn-primary" @onclick="IncrementCount">Click me</button>

@code {
    private int currentCount = 0;

    private void IncrementCount()
    {
        currentCount++;
        singlenton.valor = currentCount;
        Transistorio.valor = currentCount;
    }
}
